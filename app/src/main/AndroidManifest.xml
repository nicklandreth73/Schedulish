<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.schedulish">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver
            android:name=".MyReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity
            android:name=".Alerts"
            android:label="@string/title_activity_alerts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseDetails"
            android:label="@string/title_activity_course_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TermDetails"
            android:label="@string/title_activity_term_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddAssessment"
            android:label="@string/title_activity_add_assessment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCourse"
            android:label="@string/title_activity_add_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddTerm"
            android:label="@string/title_activity_add_term"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Assessments"
            android:label="@string/title_activity_assessments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Courses"
            android:label="@string/title_activity_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Terms"
            android:label="@string/title_activity_terms"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>